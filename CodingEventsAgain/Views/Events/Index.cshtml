}

<a asp-controller="Events" asp-action="Add">Add Event</a>
<br />

<h1>Events</h1>

<table>
    <tr>
        <th>Event Name</th>
        <th>&nbsp;&nbsp;&nbsp;Description</th>
        <th>Link to Edit</th>
    </tr>
    @foreach (Event evt in ViewBag.eventObjects)
        {<tr>
            <td>@evt.Name</td>
            <td>&nbsp;&nbsp;&nbsp;@evt.Description</td>
            <td><a asp-controller="Events" asp-action="Edit"
            asp-route-eventId="@evt.Uid">&nbsp;&nbsp;&nbsp;Edit Event</a></td>
        </tr>}
</table>

<br />
<br />

<a asp-controller="Events" asp-action="Delete">Delete an Event</a>